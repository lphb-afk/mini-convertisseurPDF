# Configuration sécurisée - Copiez vers .env et ajustez les valeurs

# Clé secrète pour JWT (si utilisée à l'avenir)
SECRET_KEY=your-super-secret-key-here-change-this-in-production

# Configuration base de données (si ajoutée)
DATABASE_URL=sqlite:///./app.db

# Configuration email (si utilisée)
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-email-password

# Configuration de sécurité
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Clés API externes (si utilisées)
# API_KEY_OPENAI=sk-your-openai-key
# API_KEY_CLOUDFLARE=your-cloudflare-key